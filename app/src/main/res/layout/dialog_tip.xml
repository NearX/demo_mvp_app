<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_bg"
    android:orientation="vertical"
    android:padding="@dimen/x16">

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/color_black_1"
        android:textSize="@dimen/text_size_16"
        android:visibility="visible"
        tools:text="message" />

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:gravity="left"
        android:textColor="@color/color_black_1"
        android:textSize="@dimen/text_size_14"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/button_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y38"
        android:layout_marginTop="@dimen/y20">

        <Button
            android:id="@+id/negative_tv"
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape_dialog_bottom_cancel"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_gray_2"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/positive_tv"
            android:layout_width="@dimen/x100"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_dialog_bottom_conform"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />

    </RelativeLayout>

    <Button
        android:id="@+id/positive_half_tv"
        style="@style/btn_normal_style"
        android:layout_marginBottom="@dimen/y0.5"
        android:layout_marginTop="@dimen/y30"
        android:text="@string/confirm"
        android:visibility="gone" />

</LinearLayout>