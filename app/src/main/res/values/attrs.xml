<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--自定义带外边框的TextView -->
    <declare-styleable name="myTextView">
        <attr name="line_height" format="dimension" />
        <attr name="line_color" format="reference|color" />
        <attr name="radius" format="dimension" />
        <attr name="background_color" format="reference|color" />
        <!--四周圆角度、左上、右上、左下、右下-->
        <attr name="corner_radius" format="dimension" />
        <attr name="corner_radius_top_left" format="dimension" />
        <attr name="corner_radius_top_right" format="dimension" />
        <attr name="corner_radius_bottom_left" format="dimension" />
        <attr name="corner_radius_bottom_right" format="dimension" />
    </declare-styleable>

    <!-- 末行对齐方式 -->
    <declare-styleable name="AlignTextView">
        <attr name="align" format="enum">
            <enum name="left" value="0" />
            <enum name="center" value="1" />
            <enum name="right" value="2" />
        </attr>
    </declare-styleable>

    <!-- 标点转换 -->
    <declare-styleable name="CBAlignTextView">
        <attr name="punctuationConvert" format="boolean" />
    </declare-styleable>

    <!--最高高度LinearLayout-->
    <declare-styleable name="MaxHeightLinearLayout">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>
</resources>
